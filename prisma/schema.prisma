generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Comando para criar uma migration => yarn prisma migrate dev
model CadastroUsuario{//user table
  id String @id @default(uuid())
  name String
  email String
  password String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("cadastro_usuarios")
}

model Prioridade_Tarefa{// category table
  id String @id @default(uuid())
  prioridade01 Boolean @default(false)
  prioridade02 Boolean @default(false)
  prioridade03 Boolean @default(false)
  prioridade04 Boolean @default(false)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("prioridade_tarefas")
  tarefas Tarefa[]
}

model Tarefa{//product table
  id String @id @default(uuid())
  name String  
  description String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  prioridade Prioridade_Tarefa @relation(fields: [prioridade_id], references: [id]) 

  @@map("tarefas")
  prioridade_id String
  itemtarefas IntergranteTarefa[]
}

model Requisicao_Tarefa{//order table
  id String @id @default(uuid())
  task Int
  status Boolean @default(false)
  draft Boolean @default(true)
  name String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("requisicao_tarefas")
  itemtarefas IntergranteTarefa[]
}

model IntergranteTarefa{//Items table
  id String @id @default(uuid())
  amount Int //qtd de intergrantes para realizar a tarefa.

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  requisicaotarefas Requisicao_Tarefa @relation(fields: [requisicao_tarefa_id], references: [id])
  tarefa Tarefa @relation(fields: [tarefa_id], references: [id])

  @@map("integrantes_tarefas")
  requisicao_tarefa_id String
  tarefa_id String
}